<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.solo.quiz.mapper.QuizMapper">
    <select id="totalCnt" resultType="java.lang.Integer">
        SELECT count(*)
        FROM quiz
    </select>
    <select id="createQuiz" resultType="org.solo.quiz.domain.QuizVO">
        SELECT quizNo, term, description
        FROM quiz
        WHERE quizNo = #{quizNo}
    </select>
    <select id="checkPoint" resultType="java.lang.Integer">
        SELECT count(*)
        FROM `user`
        WHERE userId = #{userId} AND todayQuiz = 1
    </select>
    <update id="addPoint">
        UPDATE `user`
        SET point = point + 10
        WHERE userId = #{userId}
    </update>
    <update id="checkToday">
        UPDATE `user`
        SET todayQuiz = 1
        WHERE userId = #{userId}
    </update>
    <update id="reset">
        UPDATE `user`
        SET todayQuiz = 0
    </update>
</mapper>