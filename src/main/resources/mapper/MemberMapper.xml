<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.solo.member.mapper.MemberMapper">

    <select id="findByKakaoId" parameterType="java.lang.String" resultType="org.solo.member.domain.MemberVO">
        SELECT * FROM user WHERE userId = #{userId}
    </select>

    <insert id="insertNewUserInfo" parameterType="org.solo.member.domain.MemberVO">

        INSERT INTO user (userId, nickName, name, email, birthdate, point)
        VALUES (#{userId}, #{nickName}, #{name}, #{email}, #{birthdate}, 0)

    </insert>

    <update id="updatePoint" parameterType="map">
        UPDATE user
        SET point = #{newPoint}
        WHERE userId = #{userId}
    </update>

</mapper>